.notification
  = readed_circle(notification)
  = link_to notification.owner.username, user_path(notification.owner)
  ' &nbsp;
  = notification.key
  ' &nbsp;
  = notification.trackable_type
  ' &nbsp;
  - if notification.trackable_type == 'Example'
    = link_to notification.trackable_type, phrase_path(notification.trackable.phrase)
  - else
    = link_to notification.trackable_type, phrase_path(notification.trackable_id)
  span.notification-date
    = date_formatter notification.created_at

